<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <card class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}" title="Editar"><i class="fa fa-pencil"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=delete" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
                    </form>
                </card>
            </div>
        </div>
    {{/each}}
</div>