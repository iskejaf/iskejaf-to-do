<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card card-header">
                Registro de Usuario
            </div>
            <div class="card-body">
                <form action="/user/signup" method="post">
                    <div class="form-group">
                        <input type="text" name="name" id="name" class="form-control" placeholder="Nombre" value="{{name}}" autofocus required>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email" value="{{email}}" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Contraseña" value="{{password}}" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="Confirmar Contraseña" value="{{confirm_password}}" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Registrarse
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>